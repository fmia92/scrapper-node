---
import Layout from '../layouts/Layout.astro';

const IMAGES_URL = "https://scrapper-js.fmia.workers.dev/static/logos";
const response = await fetch("https://scrapper-js.fmia.workers.dev/teams")
const teams = await response.json()
---

<Layout title="Welcome to Astro.">
	<div class="container m-auto">
		<header class="flex">
			{
				teams.map(({id, name, image}) => {
					return (
						<div>
							<a href={`/team/${id}`}>
								<img class="aspect-square w-16" src={`${IMAGES_URL}${image}`} alt={name} />
							</a>
						</div>
					)
				})
			}

			<nav>
				<ul>
					<li><a href="/">Home</a></li>
					<li><a href="/equipos">Equipos</a></li>
					<li><a href="/calendario">Calendario</a></li>
					<li><a href="/estadisticas">Estadisticas</a></li>
					<li><a href="/contacto">Contacto</a></li>
					<li><a href="/reglamento">Reglamento</a></li>
				</ul>
			</nav>
		</header>
		<main>
			<h1 class="text-orange-500 text-4xl">Welcome to Astro.</h1>
			<img src="https://kingsleague.pro/wp-content/uploads/2022/12/KL_landscape.svg" alt="">
		</main>
	</div>
</Layout>

